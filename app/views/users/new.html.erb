<!-- app/views/users/new.html.erb -->
<h2>Register</h2>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <!-- PASSWORD HAS TO BE LONGER THAN 6 CHAL --!>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Register" %>
<% end %>
